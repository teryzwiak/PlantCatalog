<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_add_secction"
        android:scaleType="centerCrop"/>


    <ImageButton
        android:padding="10dp"
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="@string/back_button_desc"
        android:src="@drawable/back_ic" />


    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/filter_H1"
        android:textSize="35sp"
        android:layout_marginStart="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_toEndOf="@id/buttonBack"/>





    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTitle"
        android:orientation="vertical"
        android:layout_marginTop="16dp"/>

    <View
        android:id="@+id/rectangle"
        android:layout_width="225dp"
        android:layout_height="400dp"
        android:layout_marginTop="190dp"
        android:layout_marginStart="85dp"
        android:background="@drawable/rounded_background_filter"
        />


    <Button
        android:id="@+id/kaktus_filter"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="230dp"
        android:layout_marginStart="125dp"
        android:textSize="25sp"
        android:text="@string/kaktus"
        ></Button>

    <Button
        android:id="@+id/palm_filter"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="300dp"
        android:layout_marginStart="125dp"
        android:textSize="25sp"
        android:text="@string/palm"
        ></Button>

    <Button
        android:id="@+id/lilia_filter"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="370dp"
        android:layout_marginStart="125dp"
        android:textSize="25sp"
        android:text="@string/lilia"
        ></Button>

    <Button
    android:id="@+id/rose_filter"
    android:layout_width="150dp"
    android:layout_height="50dp"
    android:layout_marginTop="440dp"
    android:layout_marginStart="125dp"
    android:textSize="25sp"
    android:text="@string/rose"
    ></Button>

    <Button
        android:id="@+id/tulip_filter"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="510dp"
        android:layout_marginStart="125dp"
        android:textSize="25sp"
        android:text="@string/tulip"
        ></Button>




</RelativeLayout>
